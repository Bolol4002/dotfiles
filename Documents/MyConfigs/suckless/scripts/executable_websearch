#!/bin/bash

option=$(printf "ğŸŒ Google\nğŸ¥ YouTube\nğŸ‘½ Reddit\nğŸ¤– ChatGPT" | dmenu -i -p "Search on:")

case "$option" in
	    "ğŸŒ Google")
		            query=$(dmenu -p "Google Search:")
			            [ -n "$query" ] && chromium "https://www.google.com/search?q=$(echo $query | sed 's/ /+/g')"
				            ;;
					        "ğŸ¥ YouTube")
							        query=$(dmenu -p "YouTube Search:")
								        [ -n "$query" ] && chromium "https://www.youtube.com/results?search_query=$(echo $query | sed 's/ /+/g')"
									        ;;
										    "ğŸ‘½ Reddit")
											            query=$(dmenu -p "Reddit Search:")
												            [ -n "$query" ] && chromium "https://www.reddit.com/search/?q=$(echo $query | sed 's/ /+/g')"
													            ;;
														        "ğŸ¤– ChatGPT")
																        chromium "https://chatgpt.com/?temporary-chat=true"
																	        ;;
																		    *)
																			            exit 1
																				            ;;
																			    esac

